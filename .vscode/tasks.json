// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "watch",
			"command": "zsh",
			"args": [
				"-lc",
				"export NVM_DIR=\"$HOME/.nvm\"; if [ -s \"$NVM_DIR/nvm.sh\" ]; then . \"$NVM_DIR/nvm.sh\"; nvm use; else echo \"[watch] nvm not found, using system node: $(node -v 2>/dev/null || echo not-installed)\"; fi; if [ ! -d node_modules ]; then echo \"[watch] node_modules missing, running install...\"; corepack yarn install; fi; corepack yarn run watch"
			],
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
