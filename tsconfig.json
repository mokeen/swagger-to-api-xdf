{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"skipLibCheck": true,
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "Node16",
		"baseUrl": "./src",
		"paths": {
			"@views/*": ["views/*"],
			"@model/*": ["model/*"]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"out",
		"resources",
		"webview-src"
	]
}
